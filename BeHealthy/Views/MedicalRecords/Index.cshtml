@model IEnumerable<BeHealthy.Models.MedicalRecord>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h2>@ViewBag.MemberName ，這是您的病例</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MedicalRecordDATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members.MemberName)
        </th>        <th>
            @Html.DisplayNameFor(model => model.DoctorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disorder.DietarySupplementID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medecine.DisorderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medecine.MedecineID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MedicalRecordDATE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Members.MemberName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DoctorID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Disorder.DietarySupplementID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Medecine.DisorderID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Medecine.MedecineID)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MedicalRecordID }) |
        @Html.ActionLink("Details", "Details", new { id = item.MedicalRecordID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MedicalRecordID })
    </td>
</tr>
}

</table>
